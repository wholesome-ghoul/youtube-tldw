{
  "scripts": {
    "start:prod": "STAGING_ENV=prod webpack serve --mode=production --host 0.0.0.0",
    "start:dev": "STAGING_ENV=dev webpack serve --mode=development --host 0.0.0.0",
    "serve:dist": "STAGING_ENV=dev yarn build:prod && http-server dist -p 3000",
    "build:dev": "yarn rm:dist && STAGING_ENV=dev TREEMAP=false webpack --config webpack.config.js --mode development && du -sh dist",
    "build:prod": "yarn rm:dist && STAGING_ENV=prod TREEMAP=false webpack --config webpack.config.js --mode production && du -sh dist",
    "build:prod:treemap": "yarn rm:dist && STAGING_ENV=prod TREEMAP=true webpack --config webpack.config.js --mode production && du -sh dist",
    "build:prod:watch": "yarn rm:dist && STAGING_ENV=prod TREEMAP=false webpack --config webpack.config.js --mode production --watch",
    "rm:dist": "rm -rf dist",
    "tsc:config": "tsc --showConfig"
  },
  "dependencies": {
    "@allaround/all-components": "^1.9.2",
    "@allaround/configs-tsconfig": "^1.3.0",
    "@allaround/configs-webpack": "^1.16.0",
    "@types/react": "^18.2.8",
    "@types/react-dom": "^18.2.4",
    "@types/uuid": "^9.0.3",
    "buffer": "^6.0.3",
    "dotenv": "^16.1.4",
    "lodash.debounce": "^4.0.8",
    "lodash.isnil": "^4.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.11.2",
    "uglify-js": "^3.17.4",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.10",
    "@types/chrome": "^0.0.244",
    "@types/lodash.debounce": "^4.0.7",
    "@types/lodash.isnil": "^4.0.7",
    "@types/node": "^20.2.5",
    "classnames": "^2.3.2",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "eslint": "^8.41.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-webpack-plugin": "^4.0.1",
    "fork-ts-checker-webpack-plugin": "^8.0.0",
    "html-webpack-plugin": "^5.5.1",
    "http-server": "^14.1.1",
    "mini-css-extract-plugin": "^2.7.6",
    "prettier": "^2.8.8",
    "react-refresh": "^0.14.0",
    "react-refresh-typescript": "^2.0.9",
    "sass": "^1.62.1",
    "sass-loader": "^13.3.1",
    "ts-loader": "^9.4.3",
    "type-fest": "^3.11.1",
    "typescript": "^5.1.3",
